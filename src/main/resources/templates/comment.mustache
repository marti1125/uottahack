{{>header}}

<div class="container">
    <div class="row">
        <div class="col-lg-12 mt-4 mb-4">
            <br/>
            <br/>
            <br/>
            <a type="button" class="btn btn-primary" href="/">Back <i class="fas fa-chevron-left"></i></a>
            <br/>
            <br/>
            {{#post}}
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"><strong>{{title}}</strong></h4>
                    <h5><strong>{{user}} - {{timeAgo}}</strong></h5>
                    <p class="card-text">{{content}}</p>
                    <p><strong>Topics </strong> {{categories}}</p>
                </div>
            </div>
            <br/>
            <form action="/comment" method="post">
                <input type="hidden" name="recaptchaTkn" id="recaptchaToken">
                <input type="hidden" name="postId" id="postId" value="{{id}}">
                <div class="form-group">
                    <label for="title">Reply</label>
                    <br/>
                    <textarea class="form-control" rows="5" id="content" name="content"></textarea>
                </div>
                <br/>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            {{/post}}
            <br/>
            <h3>{{count_comments}} Comments</h3>
            {{#comments}}
            <br/>
            <div class="card">
                <div class="card-body">
                    <h5><strong>{{user}} - {{timeAgo}}</strong></h5>
                    <p class="card-text">{{content}}</p>
                </div>
            </div>
            <br/>
            {{/comments}}
        </div>
    </div>
</div>
{{>footer}}