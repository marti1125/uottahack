{{>header}}

<div class="container">
    <div class="row">
        <div class="col-lg-12 mt-4 mb-4">
            <br/>
            <br/>
            <br/>
            <a type="button" class="btn btn-success" href="/">Back <i class="fas fa-chevron-left"></i></a>
            <br/>
            <form action="/post" method="post">
                <input type="hidden" name="recaptchaTkn" id="recaptchaToken">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="title" aria-describedby="title" placeholder="Enter the title">
                </div>
                <div class="form-group">
                    <label for="title">Content</label>
                    <textarea class="form-control" rows="5" id="content" name="content"></textarea>
                </div>

                {{#categories}}
                <div class="form-check form-check-inline">
                    <input class="form-check-input" name="listCategories" type="checkbox" id="{{id}}" value="{{id}}">
                    <label class="form-check-label" for="categories">{{name}}</label>
                </div>
                {{/categories}}

                <br/>
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
</div>


{{>footer}}