{{>header}}

<div class="container">
    <div class="row">
        <div class="col-lg-12 mt-4 mb-4">
            <br/>
            <br/>
            <br/>
            <h3>What's on your mind?</h3>
            <a type="button" class="btn btn-primary" href="/post">Create post <i class="fas fa-arrow-circle-right"></i></a>
            <br/>
            <br/>
            <form>
                <div class="form-group">
                    <select class="form-control" name="categoryId">
                        <option value="0">-- Choose --</option>
                        {{#categories}}
                        <option value="{{id}}">{{name}}</option>
                        {{/categories}}
                    </select>
                    <br/>
                    <button type="submit" class="btn btn-primary">Filter <i class="fas fa-filter"></i></button>
                </div>
            </form>
            <br/>
            {{#posts}}
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"><strong>{{title}}</strong></h4>
                        <h5><strong>{{user}} - {{timeAgo}}</strong></h5>
                        <p class="card-text">{{content}}</p>
                        <a href="#" class="btn btn-primary">Comment <i class="fas fa-comments"></i></a>
                        <p>{{categories}}</p>
                    </div>
                </div>
                <br/>
            {{/posts}}
            {{^posts}}
                <h1>No posts!</h1>
            {{/posts}}
        </div>
    </div>
</div>

{{>footer}}